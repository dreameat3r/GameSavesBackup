<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="660" d:DesignHeight="350"
        x:Class="GameSavesBackup.MainWindow"
        Width="700"
        Height="350"
        CanResize="False"
        Background="#191919"
        Title="GameSavesBackup">
    
    <Grid ShowGridLines="false">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>

    
    <StackPanel Grid.Column="0" Grid.Row="0"
                HorizontalAlignment="Center"
                Name="MainBlock"
                VerticalAlignment="Center"
                Orientation="Vertical"
                Margin="20">
        
        <TextBlock Margin="0.5"
                    FontWeight="Bold"
                    FontFamily="SF Pro Display"
                    FontSize="17"
                    Foreground="white">
                    From:
        </TextBlock>
        
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="SourcePathTextBox"></TextBox>
            <TextBlock Margin="10"></TextBlock>
            <Button Click="SelectSourceFolder">
                <StackPanel>
                    <PathIcon Height="20" Width="20" Foreground="Black" Data="{StaticResource folder_open_regular}" />
                </StackPanel>
            </Button>
        </StackPanel>
        
        <TextBlock Margin="2"></TextBlock>
        <Button HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" 
                        VerticalAlignment="Center">
                <PathIcon Height="20" 
                          Width="20" 
                          Foreground="Black" 
                          Data="{StaticResource arrow_sort_regular}"/>
            </StackPanel>    
        </Button>
        
        <TextBlock Margin="0.5" 
                   FontWeight="Bold" 
                   FontFamily="SF Pro Display" 
                   FontSize="17" 
                   Foreground="white">
                   To:</TextBlock>
        
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="TargetPathTextBox"></TextBox>  
            <TextBlock Margin="10"></TextBlock> 
            <Button Click="SelectTargetFolder">
                <StackPanel>
                    <PathIcon Height="20" Width="20" Foreground="Black" Data="{StaticResource folder_open_regular}" />
                </StackPanel>
            </Button>
        </StackPanel>
        
        <Button HorizontalAlignment="Center" 
                Width="100"
                HorizontalContentAlignment="Center"
                Margin="15">Backup</Button>
    </StackPanel>
    


    <StackPanel Grid.Column="1" Grid.Row="0"
                HorizontalAlignment="Center"
                Name="PresetBlock"
                VerticalAlignment="Center"
                Orientation="Vertical"
                Margin="20">
        <TextBlock Margin="0.5" FontWeight="Bold" FontFamily="SF Pro Display" FontSize="17">Presets</TextBlock>
        <ListBox x:Name="Presets"></ListBox>
        <Button HorizontalAlignment="Center"
                Width="150"
                HorizontalContentAlignment="Center"
                Margin="15"
                Click="OpenPresetEditor">
                Save/Edit Preset
        </Button>
    </StackPanel>

    <StackPanel Grid.Column="2" Grid.Row="0"
                HorizontalAlignment="Center"
                Name="UserBlock"
                VerticalAlignment="Top"
                Orientation="Vertical"
                Margin="10">
        <Button Height="40"
                Width="40"
                Margin="0,10"
                Click="OpenSettings">
            <StackPanel>
                <PathIcon Height="20" 
                          Width="20" 
                          Foreground="Black" 
                          Data="{StaticResource settings_regular}"/>
            </StackPanel>
        </Button>
    </StackPanel>
    </Grid>
    
